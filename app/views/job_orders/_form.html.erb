<%= form_for(@job_order) do |f| %>
  <% if @job_order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job_order.errors.count, "error") %> prohibited this job_order from being saved:</h2>

      <ul>
      <% @job_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="input-field col s12">
    <%= f.select :client_id, options_from_collection_for_select(@clients, :id, :name) %>
    </div>
  </div>

  <div class="field">
    <div class="input-field col s12">
    <%= f.select :mode_of_shipment, options_for_select(@mode_of_shipments) %>
    </div>
  </div>

  <div class="field">
    <div class="input-field col s12">
    <%= f.select :service_type, options_for_select(@service_types) %>
    </div>
  </div>

  <div class="field">
    <div class="input-field col s12">
    <%= select_tag :services, options_for_select(@job_order_services), multiple: true %>
    </div>
  </div>


  <div class="actions">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
  </div>
<% end %>
